#!/usr/bin/env groovy
/*
 * Forkfile
 * gradle-xcodePlugin
 */

node {
    stage("🛒 Checkout") {
        checkout scm
        sh "pwd"
        sh "ls -la"
        sh "mkdir -p build/dependencies"
        sh "cd build/dependencies && git clone git@github.com:phatblat/Fork.git"
    }
    stage("⏫ Update") {
        gradle "projects"
    }
}

void gradle(String command) {
    sh """.fork/gradlew \
        --no-daemon \
        --build-file .fork/build.gradle.kts \
        --settings-file settings.gradle.kts \
        --warning-mode all \
        $command
    """
}
